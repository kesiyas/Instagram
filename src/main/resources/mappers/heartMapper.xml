<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.kesiyas.spring.instagram.post.heart.dao.HeartDAO">
	<insert id="insertHeart" parameterType="int">
		INSERT INTO
			`heart`
		(
			`userId`
			, `postId`
			, `createdAt`
		)
		VALUES
		(
			#{userId}
			, #{postId}
			, now()
		)
	</insert>
	
	<select id="selectHeartCount" parameterType="int" resultType="int">
		SELECT 
			count(postId)
		FROM
			`heart`
		WHERE
		 	`postId` = #{postId}
	</select>
	
	<select id="selectDuplicateHeart" parameterType="int" resultType="com.kesiyas.spring.instagram.post.heart.model.Heart">
		SELECT
			`id`
			, `userId`
			, `postId`
			, `createdAt`
		FROM
			`heart`
		WHERE
			`userId` = #{userId}
			AND
		 	`postId` = #{postId}
	</select>

</mapper>