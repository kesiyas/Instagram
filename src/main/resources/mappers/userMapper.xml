<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.kesiyas.spring.instagram.user.dao.UserDAO">
	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`
			, `password`
			, `name`
			, `nickname`
			, `phoneNumber`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{nickname}
			, #{phoneNumber}
			, now()
			, now() 
		)
	
	</insert>

	<select id="selectCheckLoginId" parameterType="String" resultType="int">
		SELECT
			count(1)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	
	</select>
	
	<select id="selectUser" parameterType="map" resultType="com.kesiyas.spring.instagram.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `nickname`
			, `phoneNumber`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId} AND
			`password` = #{password}
	</select>
	
	<select id="selectLoginId" parameterType="map" resultType="com.kesiyas.spring.instagram.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `name`
			, `createdAt`
			, `updatedAt`
		FROM 
			`user`
		WHERE
			`name` = #{name} AND
			`nickname` = #{nickname}	
	</select>
	
	<select id="selectUserById" parameterType="int" resultType="com.kesiyas.spring.instagram.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `name`
			, `nickname`
			, `phoneNumber`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
		
	</select>
	
</mapper>