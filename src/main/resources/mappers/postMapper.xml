<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.kesiyas.spring.instagram.post.dao.PostDAO">
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `content`
			, `imgPath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{content}
			, #{imgPath}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectPost" parameterType="int" resultType="com.kesiyas.spring.instagram.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `content`
			, `imgPath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
	</select>
	
	<delete id="deletePost" parameterType="int">
		DELETE 
		FROM
			`post`
		WHERE
			`id` = #{id} AND
			`userId` = #{userId}
	</delete>
	
	<select id="selectSearchUser" parameterType="String" resultType="com.kesiyas.spring.instagram.user.model.User">
		SELECT
			`id`
			, `loginId`
			, `nickname`
		FROM
			`user`
		WHERE
		 	`loginId` LIKE CONCAT(#{loginId}, '%')
	
	</select>
	
	<select id="selectOtherUser" parameterType="int" resultType="com.kesiyas.spring.instagram.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `content`
			, `imgPath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{id}
	</select>
</mapper>